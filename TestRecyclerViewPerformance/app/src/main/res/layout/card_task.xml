<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    style="@style/MadNew.CardView"
    card_view:cardBackgroundColor="@color/task_card_background_color"
    tools:layout_height="400dp">

    <LinearLayout
        android:id="@+id/task_card_field_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/icon_block"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/standard_atom_horizontal_padding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/active_task_activate"
                style="@style/MadNew.IconButton.Secondary"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_task_card_active_task" />

            <ImageView
                android:id="@+id/active_task_deactivate"
                style="@style/MadNew.IconButton.Primary"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_activ_task_stop_24dp" />

            <Space
                android:id="@+id/active_task_divider"
                android:layout_width="4dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/task_attachments_button"
                style="@style/MadNew.IconButton.Secondary"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_attach_file_24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/active_task_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                card_view:srcCompat="@drawable/ic_task_card_active_task"
                android:visibility="gone"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/main_task_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_task_card_active_task"
                android:visibility="gone"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/jeopardy_task_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_task_card_jeopardy"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ordered_task_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_task_card_task_open_no_dependencies"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/locked_task_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_task_card_task_reserved"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_assigned_tasks_menu_icon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_field_container_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/updated_one"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:background="@null"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:scaleType="fitCenter"
        card_view:srcCompat="@drawable/ic_notification_bell_one" />

    <ImageView
        android:id="@+id/updated_two"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:background="@null"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:scaleType="fitCenter"
        card_view:srcCompat="@drawable/ic_notification_bell_two" />
</com.google.android.material.card.MaterialCardView>